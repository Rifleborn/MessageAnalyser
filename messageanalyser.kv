# root widget class
<MainWidget>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        ScrollView:
            size_hint: 1, 0.7
            BoxLayout:
                id: footer
                padding: [0, 0, 0, 8]  # [ліва, верх, право, низ]
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0.918, 0.937, 0.937, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        id: table_container
                        canvas.before:
                            Color:
#                               rgba: 0.498, 0.976, 0.514, 1
                                rgba: 0.918, 0.937, 0.937, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        spacing: "12dp"
                        padding: 8, 8
                        orientation: 'vertical'
                        size: root.width, root.height
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDTextField:
                    id: idField
                    hint_text: "api_id"
                    icon_left: "lock"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 300
                MDTextField:
                    id: hashField
                    hint_text: "api_hash"
                    icon_left: "lock"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 300
                MDTextField:
                    id: phoneNumberField
                    hint_text: "Номер телефону (+38)"
                    icon_left: "phone"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_x: None
                    width: 300
                BoxLayout:
                    id: buttonContainer
                    size_hint: 0.4, 0.35
                    padding: [15, 8, 15, 8]  # [ліва, верх, право, низ]
                    orientation: 'horizontal'
                    spacing: 35  # space between buttons
                    pos_hint: {"center_x": 0.5}
                    canvas.before:
                        Color:
                            rgba: 0.918, 0.937, 0.937, 1
                            #rgba: 1, 0, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
